<Window x:Class="Relax.Windows.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:Relax.Controls"
        Title="Relax" Height="300" Width="250" WindowStartupLocation="CenterScreen">
    <StackPanel VerticalAlignment="Center">
        <GroupBox Header="Пользователь" HorizontalAlignment="Center">
            <controls:AuthControl/>
        </GroupBox>
        <GroupBox Header="Персонажи" x:Name="_charactersGroup" HorizontalAlignment="Center">
            <controls:CharacterSelectorControl/>
        </GroupBox>
    </StackPanel>
</Window>
