<Window x:Class="Relax.DesktopClient.Windows.CreateCharacterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Новый персонаж" Height="150" Width="200" ShowInTaskbar="False" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Имя: "/>
        <TextBox x:Name="_tbName" Grid.Column="1"/>
        
        <StackPanel HorizontalAlignment="Right" Grid.Row="2" Grid.ColumnSpan="2">
            <Button Content="OK" Click="OnOkClick"/>
        </StackPanel>        
    </Grid>
</Window>
